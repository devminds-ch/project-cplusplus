{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "default:automergeMinor",
    "default:rebaseStalePrs"
  ],
  "minimumReleaseAge": "14 days",
  "prCreation": "not-pending",
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "GitHub Actions",
      "matchManagers": [
        "github-actions"
      ]
    }
  ]
}